{
    "name": "iidxwidget",
    "version": "1.2.0",
    "description": "iidxwidget",
    "author": "Sadang",
    "license": "MIT",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder"
    },
    "build": {
        "appId": "app.beatmania.iidxwidget",
        "productName": "IIDXwidget",
        "artifactName": "IIDXwidget-Setup-${version}.${ext}",
        "files": [
            "**/*"
        ],
        "directories": {
            "buildResources": "build"
        },
        "win": {
            "target": "nsis"
        },
        "publish": [
            {
                "provider": "github",
                "owner": "Coldlapse",
                "repo": "IIDXwidget"
            }
        ]
    },
    "dependencies": {
        "electron-log": "^5.4.1",
        "electron-store": "^8.2.0",
        "electron-updater": "^6.6.2",
        "express": "^4.18.4",
        "node-global-key-listener": "^0.3.0",
        "node-hid": "^2.1.2",
        "ws": "^8.18.1"
    },
    "devDependencies": {
        "electron": "^29.1.0",
        "electron-builder": "^26.0.12"
    }
}
